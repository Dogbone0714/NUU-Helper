<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <!--学校相关活动通知模块-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu_message"
        style="@style/menu.cardview">

        <include layout="@layout/item_menu_message" />
    </androidx.cardview.widget.CardView>



    <!--课表模块-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu_course"
        style="@style/menu.cardview">

        <include layout="@layout/item_menu_course" />

    </androidx.cardview.widget.CardView>

    <!--图书馆模块-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu_library"
        style="@style/menu.cardview">

        <include layout="@layout/item_menu_library" />

    </androidx.cardview.widget.CardView>

    <!--跳蚤市场模块-->
    <androidx.cardview.widget.CardView style="@style/menu.cardview">

        <include layout="@layout/item_menu_goods" />

    </androidx.cardview.widget.CardView>

    <!--失误招领市场模块-->
    <androidx.cardview.widget.CardView style="@style/menu.cardview">

        <include layout="@layout/item_menu_lost" />

    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>

